function _timeout (cb, t, res, tmp) {

    var rv = new tame.Rendezvous ();
    var arr = [];
    tmp[0] = rv.id (true).pledge (arr);
    setTimeout (rv.id (false).pledge (), t);
    await { rv.wait (pledge (var which)); }
    if (res) { res[0] = which; }
    cb.apply (null, arr);
};

function timeout (cb, t, res) {
    var tmp = [];
    _timeout (cb, t, res, tmp);
    return tmp[0];
};

exports.timeout = timeout;
